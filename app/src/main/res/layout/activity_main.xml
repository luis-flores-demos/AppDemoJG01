<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color"
    tools:context="demos.lafm.demojg1.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:elevation="1dp">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="INICIAR SESIÃ“N"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/color"
                android:textSize="20dp"
                android:elevation="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_menu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="@drawable/border_corner_blue"
            android:elevation="1dp">

            <ImageView
                android:id="@+id/btn_inicio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/border_corner_white"
                android:text="Inicio"
                android:src="@drawable/ic_home_black"
                android:tint="@color/color"
                android:padding="8dp"/>

            <ImageView
                android:id="@+id/btn_solicitudes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/border_corner_white"
                android:text="Inicio"
                android:src="@drawable/ic_notifications_black"
                android:tint="@color/color"
                android:padding="8dp"/>

            <ImageView
                android:id="@+id/btn_informacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/border_corner_white"
                android:text="Inicio"
                android:src="@drawable/ic_book_black"
                android:tint="@color/color"
                android:padding="9dp"/>

            <ImageView
                android:id="@+id/btn_usuario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/border_corner_white"
                android:text="Inicio"
                android:src="@drawable/ic_person_black"
                android:tint="@color/color"
                android:padding="6dp"/>

        </LinearLayout>

        <demos.lafm.demojg1.custom.LNonSwipeableViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-2dp"
            android:elevation="0dp"/>

    </LinearLayout>



</RelativeLayout>
